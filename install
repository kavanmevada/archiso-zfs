#!/bin/bash
echo "Starting Installer"

$(ls -al /dev/disk/by-partuuid | awk '{ print "export " $11 "=" $9";"}' | sed 's/..\/..\///g' | sed -e '1,3d')


zpool create -f -o ashift=12         \
             -O acltype=posixacl       \
             -O relatime=on            \
             -O xattr=sa               \
             -O dnodesize=legacy       \
             -O normalization=formD    \
             -O mountpoint=none        \
             -O canmount=off           \
             -O devices=off            \
             -R /mnt                   \
             zroot /dev/disk/by-partuuid/${vda3}
